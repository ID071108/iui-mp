<view class='iconfont-intro p20'>
  <view class='font-16' style="margin-bottom: 10px;">使用方法: </view>
  <view class='p20 c-red' style="background-color: #eee;">
    {{'<view type="type" iconPath="path/to/your/img" size="size"></view>'}}

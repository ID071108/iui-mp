</view>
<view class='tr'>
  <view class='p10 name'>iconPath</view>
  <view class='p10 type'>String</view>
  <view class='p10 defVal'>16px</view>
  <view class='p10 desc'>自定义Icon的图片路径</view>
</view>
<view class='tr'>
  <view class='p10 name'>shape</view>
  <view class='p10 type'>String</view>
  <view class='p10 defVal'>square | circle</view>
  <view class='p10 desc'>图标形状</view>
</view>
